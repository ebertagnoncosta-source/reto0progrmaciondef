// Ejemplo 1: .indexOf()
console.log("¿Dónde aparece la palabra 'Javascript' en esta frase?".indexOf("Javascript"));

// Ejemplo 2: .slice()
console.log("Estoy aprendiendo JavaScript".slice(13, 23));

// Ejemplo 3: .split()
const texto = "Me encanta la pizza. La pizza con extra de queso es deliciosa. Pizza para todos.";
const palabra = "pizza";
const contador = texto.toLowerCase().split(palabra).length - 1;
console.log(contador);
